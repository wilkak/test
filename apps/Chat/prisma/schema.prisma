datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Chat {
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  messages    Message[]
  updatedAt   DateTime  @updatedAt
  userId      String?
}

model Message {
  content   String?
  createdAt DateTime  @default(now())
  dateSent  DateTime?
  id        String    @id @default(cuid())
  updatedAt DateTime  @updatedAt
  userName  String?
  chat      Chat?     @relation(fields: [chatId], references: [id])
  chatId    String?
}
